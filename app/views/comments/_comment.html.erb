<% unless comment.archived? %>
  <!-- person who left a comment -->
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
  <!-- actual comment -->
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <p>
    <%= link_to "Delete Comment", [comment.article, comment], data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %>
  </p>
<% end %>